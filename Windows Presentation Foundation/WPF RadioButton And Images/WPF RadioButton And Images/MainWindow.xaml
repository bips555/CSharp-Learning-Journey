<Window x:Class="WPF_RadioButton_And_Images.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_RadioButton_And_Images"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Do you like me?" FontWeight="Bold" FontSize="32"/>
      

        <RadioButton Click="RadioButton_Click_Yes" Margin="20">
            <WrapPanel HorizontalAlignment="Left">
                <Rectangle Margin="5,0" Width="12" Height="12" Fill="Green"></Rectangle>
                <TextBlock>Yes</TextBlock>
            </WrapPanel>
        </RadioButton>
        <RadioButton Click="RadioButton_Click_Maybe" Name="rbMaybe" Margin="20">
            <WrapPanel HorizontalAlignment="Left">
                <Image Width="12" Height="12" Source="C:\Users\BIPLOV\Downloads\5167633.png"/>
                <TextBlock>Maybe</TextBlock>
            </WrapPanel>
        </RadioButton>
        <RadioButton Click="RadioButton_Click_No" Margin="20">
            <WrapPanel HorizontalAlignment="Left">
                <Rectangle Margin="5,0" Width="12" Height="12" Fill="Red"></Rectangle>
                <TextBlock>No</TextBlock>
            </WrapPanel>
        </RadioButton>
    </StackPanel>
</Window>
